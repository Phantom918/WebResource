
	body{font-family:"ff-tisa-web-pro-1","ff-tisa-web-pro-2","Lucida Grande","Helvetica Neue",Helvetica,Arial,"Hiragino Sans GB","Hiragino Sans GB W3","WenQuanYi Micro Hei",sans-serif;}
	/*所有文字的字体*/
	*{ font-family:"ff-tisa-web-pro-1","ff-tisa-web-pro-2","Lucida Grande","Helvetica Neue",Helvetica,Arial,"Hiragino Sans GB","Hiragino Sans GB W3","Microsoft YaHei UI","Microsoft YaHei","WenQuanYi Micro Hei",sans-serif}
	h1, .h1, h2, .h2, h3, .h3, h4, .h4, .lead {font-family:"ff-tisa-web-pro-1","ff-tisa-web-pro-2","Lucida Grande","Helvetica Neue",Helvetica,Arial,"Hiragino Sans GB","Hiragino Sans GB W3","Microsoft YaHei UI","Microsoft YaHei","WenQuanYi Micro Hei",sans-serif;}
	/*连接样式*/
	a{ cursor:pointer; }
	/*图片居中*/
 	.imgCenter { width:100%;  height:70%; text-align:center; font-size:0;}
	.imgCenter img { max-height:60%; max-width:60%; padding:2em; }

	@-webkit-viewport   { width: device-width; }
	@-moz-viewport      { width: device-width; }
	@-ms-viewport       { width: device-width; }
	@-o-viewport        { width: device-width; }
	@viewport           { width: device-width; }
	
	/*顶部距离样式*/
	.margin_top{ margin-top:0.5em }
	/*底边距离样式*/
	.margin_bottom{ padding-top:1em }
	/*标题文字样式*/
	.title_top{font-size:18px; font-weight:500; margin-top:0.5em; text-shadow: 0px 1px 0px rgba(0, 0, 0, 0.15) }
	
	/*标签页内容内补样式*/
	.lble_content{ padding:1em 1em 1em 1em }
	/*表头样式*/
	.table_header{ font-size:16px; background-color:#6CF; font-weight:bold }

	.title_backimg{ height:8em; background:url(../images/k2.jpg) no-repeat; background-size:cover; border-radius:1em}/*标题背景图*/
	
	.tilte_font{ font-size:3.5em; font-weight:700; color:#9CF; padding-top:0.4em;letter-spacing: 0.3em; } /*标题文字*/
	
	.top_maggin{ margin-top:-2.5em;} /*标题顶部距离*/
	
	.top_user{ margin-top:-1em}
	
	.cneter_body{ height:23em; padding-top:2.5em}/*磁贴区域高度*/
	
	
	.magnet_bigger{ width:14em; height:20em; background-color:#3CC;}
	.magnet_middle{ width:20em; height:9.5em; background-color:#C0F;}
	.magnet_small{ width:20em; height: 9.5em; background-color:#393; margin-top:1em }
	
	.img_padding1{ padding:3em }
	.img_padding2{ padding:1em }
	.img_padding2 img{ max-height:60%; max-width:80%;  }
	.img_padding3{ padding:3em }
	.bigger_font{ font-size:1.5em; letter-spacing: 10px; }
	.middle_font{ width:2em; font-size:1.5em; word-wrap:break-word; letter-spacing: 10px; vertical-align:central  }
	
	*[magnet="magnet"]:hover{
    -moz-box-shadow: 3px 3px 4px #000;
    -webkit-box-shadow: 3px 3px 4px #000;
    box-shadow: 3px 3px 4px #000;
    /* For IE 8 */
    -ms-filter:progid:DXImageTransform.Microsoft.Shadow(Strength=4, Direction=135, Color='#000000');
    /* For IE 5.5 - 7 */
    filter: progid:DXImageTransform.Microsoft.Shadow(Strength=4, Direction=135, Color='#000000');
	cursor:pointer;
	border-color:#FFF;
	border-style:solid;
	border-width:0.1em;
   }
   
   
   
